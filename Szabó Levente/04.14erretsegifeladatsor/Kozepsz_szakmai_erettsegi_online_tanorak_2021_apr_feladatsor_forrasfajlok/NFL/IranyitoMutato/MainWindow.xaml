        <Label Content="Touchdown passzok:" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.492,0.5" Grid.Row="1" Height="26" Width="118"/>
        <Label Content="Eladott átadások:" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.492,0.5" Grid.Row="1" Height="26" Width="101"/>
        <TextBox x:Name="tbKisérlet" HorizontalAlignment="Left" Height="23" Margin="183,5,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="40" Grid.Row="1" TextChanged="tbKisérlet_TextChanged" TextAlignment="Center"/>
