        <Label Name="IMutató" Content="Irányító mutató:" HorizontalAlignment="Left" Margin="313,89,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Grid.Row="1"/>
        <Button x:Name="btnSzamol" Content="Számol" HorizontalAlignment="Left" Margin="354,131,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Height="20" Click="btnSzamol_Click_1"/>

